<h1>New Wiki</h1>

<div class='row'>
    <div class='col-md-4'>
        <h4>*Guidelines*</h4>
            <ul>
                <li>Be Creative!</li>
                <li>Be Curtious!</li>
                <li>Learn!</li>
            </ul>
    </div>
    <div class='col-md-8'>
        <%= form_for @wiki do |f| %>
            <div class='form-group'>
                <%= f.label :title %>
                <%= f.text_field :title, class: 'form-control', placeholder: 'Enter Wiki Title Here' %>
            </div>
            <div class='form-group'>
                <%= f.label :body %>
                <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: 'Enter Wiki Body' %>
            </div>
            <div class='form-group'>
                <%= f.submit 'Save', class: 'btn btn-success' %>
            </div>
            <% if current_user.role == 'premium_user' || current_user.role == 'admin' %>
                <div class='form-group'>
                    <%= f.label :private %>
                    <%= f.check_box :private %>
                </div>
            <% end %>            
        <% end %>
    </div>
</div>